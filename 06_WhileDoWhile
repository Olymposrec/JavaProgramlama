package whileloop;

/**
 *
 * @author melih
 */
public class WhileLoop {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        int j=0,i=0;
        
        while(j<10)
        {
            System.out.println(j);
            j++;
        }
        
        System.out.println("-----------");
        do{
            System.out.println(i);
            i++;
        }
        while(i<10); 
    }
    
}
